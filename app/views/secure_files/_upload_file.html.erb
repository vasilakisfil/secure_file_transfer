<%= form_for(@secure_file) do |f| %>
  <%= render 'error_messages' %>
  <%= f.label :file %>
  <%= f.file_field :file %>
  <%= f.text_area :name, placeholder: "Name..." %>
  <%= f.text_area :description, placeholder: "Description..." %>
  <%= f.text_area :shared_to, placeholder: "Add users you want to share with..." %>
  <%= f.submit "Upload", :disable_with => "Please Wait...", class: "button" %>
<% end %>
